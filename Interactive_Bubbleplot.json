{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "background": "lavenderblush",
  "title": "Birthrate and Deathrate per Country by Region and Population",
  "data": {
    "url": "https://raw.githubusercontent.com/span0017/FIT3179/main/countries.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "ASIA (EX. NEAR EAST)",
          "EASTERN EUROPE",
          "NORTHERN AFRICA",
          "OCEANIA",
          "WESTERN EUROPE",
          "SUB-SAHARAN AFRICA",
          "LATIN AMER. & CARIB",
          "C.W. OF IND. STATES",
          "NEAR EAST",
          "NORTHERN AMERICA",
          "BALTICS"
        ],
        "labels": [
          "Show All",
          "ASIA (EX. NEAR EAST)",
          "EASTERN EUROPE",
          "NORTHERN AFRICA",
          "OCEANIA",
          "WESTERN EUROPE",
          "SUB-SAHARAN AFRICA",
          "LATIN AMER. & CARIB",
          "C.W. OF IND. STATES",
          "NEAR EAST",
          "NORTHERN AMERICA",
          "BALTICS"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Birthrate > 0"},
    {"filter": "datum.Deathrate > 0"},
    {"filter": "datum.Population > Population_Above"},
    {
      "filter": "Region_selection == null || datum.Region == Region_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Birthrate",
      "type": "quantitative",
      "title": "Birthrate",
      "axis": {"tickCount": 4},
      "scale": {"type": "log", "domain": [1, 70]}
    },
    "y": {
      "field": "Deathrate",
      "type": "quantitative",
      "axis": {"tickCount": 4},
      "scale": {"type": "log", "domain": [1, 70]}
    }
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "ASIA (EX. NEAR EAST)",
              "EASTERN EUROPE",
              "NORTHERN AFRICA",
              "OCEANIA",
              "WESTERN EUROPE",
              "SUB-SAHARAN AFRICA",
              "LATIN AMER. & CARIB",
              "C.W. OF IND. STATES",
              "NEAR EAST",
              "NORTHERN AMERICA",
              "BALTICS"
            ],
            "range": [
              "#e6194b", "#3cb44b", "#ffe119", "#4363d8", "#f58231", "#911eb4", "#46f0f0", "#f032e6", "#bcf60c", "#000000", "#008080"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Region", "type": "nominal"},
          {"field": "Deathrate", "type": "quantitative", "format": ","},
          {"field": "Birthrate", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","}
         
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Eswatini' || datum['Country'] == 'Singapore' || datum['Country'] == 'N. Mariana Islands' || datum['Country'] == 'Niger' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'Haiti'||  datum['Country'] == 'Russia' || datum['Country'] == 'Albania' || datum['Country'] == 'Libya' || datum['Country'] == 'Andorra'|| datum['Country'] == 'Bermuda' || datum['Country'] == 'Lithuania'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Region", "type": "nominal"},
          {"field": "Deathrate", "type": "quantitative", "format": ","},
          {"field": "Birthrate", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","}
          
        ]
      }
    }
  ]
}
